<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    /* Simple card/list layout similar to your reference image */
    .product-row {
      display: flex;
      align-items: center;
      padding: 18px;
      border-bottom: 1px solid #e9ecef;
    }
    .product-name { flex: 2; }
    .product-image { flex: 1; text-align: center; }
    .product-qty { flex: 1; text-align: center; }
    .product-price { flex: 1; text-align: center; }
    .product-actions { flex: 1; text-align: center; }
    .low-stock-badge { margin-left: 8px; }
    .table-danger { background-color: #f8d7da !important; } /* keep existing red row styling */
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add Product</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container mt-4">
    <% if (user) { %>
        <p>Welcome, <%= user.username %> (<%= user.role %>) !</p>
    <% } %>
    <h2 class="text-center mb-4">Products from Supermarket</h2>

    <% if (!products || products.length === 0) { %>
      <p>No products found.</p>
    <% } else { %>

      <!-- Header row -->
      <div class="product-row fw-bold text-secondary">
        <div class="product-name">Product Name</div>
        <div class="product-image">Product Image</div>
        <div class="product-qty">Quantity</div>
        <div class="product-price">Price</div>
        <div class="product-actions">Actions</div>
      </div>

      <!-- Products -->
      <% products.forEach(function(p) { %>
        <div class="product-row <%= p.lowStock ? 'table-danger' : '' %>">
          <!-- Product name as hyperlink to product detail -->
          <div class="product-name">
            <a href="/product/<%= p.id %>"><%= p.productName %></a>
          </div>

          <!-- Image -->
          <div class="product-image">
            <% if (p.image) { %>
              <img src="/images/<%= p.image %>" alt="" style="height:48px">
            <% } %>
          </div>

          <!-- Quantity -->
          <div class="product-qty">
            <%= p.quantity %>
          </div>

          <!-- Price + Low stock badge -->
          <div class="product-price">
            $<%= Number(p.price).toFixed(2) %>
            <% if (p.lowStock) { %>
              <span class="badge bg-danger low-stock-badge">Low Stock!</span>
            <% } %>
          </div>

          <!-- Actions: edit + delete (view removed) -->
          <div class="product-actions">
            <a href="/updateproduct/<%= p.id %>" class="btn btn-sm btn-secondary">edit</a>

            <form action="/deleteproduct/<%= p.id %>" method="post" style="display:inline" onsubmit="return confirm('Delete this product?');">
              <!-- if you prefer method-override you can include: <input type="hidden" name="_method" value="DELETE"> -->
              <button type="submit" class="btn btn-sm btn-danger">delete</button>
            </form>
          </div>
        </div>
      <% }); %>

    <% } %>
  </div>
</body>
</html>
