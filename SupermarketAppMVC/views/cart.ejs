<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar (unchanged) -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% cart.forEach(function(item){ %>
            <tr>
              <td><%= item.productName %></td>
              <td>
                <% if (item.image) { %>
                  <img src="/images/<%= item.image %>" width="80" class="img-thumbnail">
                <% } %>
              </td>
              <td><%= item.quantity %></td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
              <td>
                <!-- Inline onsubmit confirm and data attributes for JS fallback -->
                <form
                  action="/cart/delete/<%= item.id %>"
                  method="post"
                  class="confirm-delete-form"
                  data-name="<%= item.productName.replace(/"/g, '&quot;') %>"
                  onsubmit="return confirm('Remove \"<%= item.productName %>\" from cart?');"
                  style="display:inline"
                >
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
            <% total += item.price * item.quantity; %>
          <% }); %>
        </tbody>
      </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
      </div>
    <% } %>
  </div>

  <script>
    // extra safety: add JS confirmation to all forms with class confirm-delete-form
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.confirm-delete-form').forEach(function (form) {
        form.addEventListener('submit', function (e) {
          // If inline onsubmit returned false this won't run, but this is a fallback
          const name = form.dataset.name || 'this item';
          if (!confirm('Remove "' + name + '" from cart?')) {
            e.preventDefault();
          }
        });
      });
    });
  </script>
</body>
</html>